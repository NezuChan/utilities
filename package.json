{
  "name": "@nezuchan/utilities",
  "version": "1.0.0",
  "description": "Common Utilities packages for NezuChan Projects",
  "scripts": {
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "build": "turbo build"
  },
  "type": "module",
  "author": "KagChi",
  "license": "GPL-3.0",
  "devDependencies": {
    "@hazmi35/eslint-config": "^8.7.1",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.27",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "lerna": "^6.4.1",
    "rimraf": "^4.1.1",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "@hazmi35/eslint-config/typescript"
    ],
    "rules": {
        "class-methods-use-this": "off",
        "@typescript-eslint/naming-convention": "off"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "turbo": "^1.7.0"
  }
}
